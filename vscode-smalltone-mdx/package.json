{
    "name": "smalltone-mdx-tools",
    "displayName": "Smalltone MDX Tools",
    "description": "为 MDX 提供大纲视图与预览，并支持创建 MDX 文件。",
    "version": "0.1.0",
    "publisher": "smalltone",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:mdx",
        "onCommand:smalltoneMdx.openPreview",
        "onCommand:smalltoneMdx.createFile",
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "mdx",
                "aliases": [
                    "MDX",
                    "mdx"
                ],
                "extensions": [
                    ".mdx"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "smalltoneMdx.createFile",
                "title": "MDX: 新建 MDX 文件"
            },
            {
                "command": "smalltoneMdx.openPreview",
                "title": "MDX: 打开预览"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceExtname =~ /.mdx$/i",
                    "command": "smalltoneMdx.openPreview",
                    "group": "navigation@99"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceExtname =~ /.mdx$/i",
                    "command": "smalltoneMdx.openPreview",
                    "group": "navigation@99"
                }
            ],
            "commandPalette": [
                {
                    "command": "smalltoneMdx.createFile"
                },
                {
                    "command": "smalltoneMdx.openPreview"
                }
            ]
        },
        "configuration": {
            "title": "Smalltone MDX",
            "properties": {
                "smalltoneMdx.preview.autoUpdate": {
                    "type": "boolean",
                    "default": true,
                    "description": "编辑时自动刷新预览"
                },
                "smalltoneMdx.preview.cssPath": {
                    "type": "string",
                    "default": "src/app/globals.css",
                    "description": "用于预览的站点 CSS 路径（相对工作区根）"
                },
                "smalltoneMdx.preview.wrapperClass": {
                    "type": "string",
                    "default": "prose prose-lg dark:prose-invert max-w-none text-content article-content-selectable",
                    "description": "包裹预览内容的类名，使排版与站点一致"
                },
                "smalltoneMdx.preview.removeFirstH1": {
                    "type": "boolean",
                    "default": true,
                    "description": "渲染后移除正文中的第一个 H1"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p .",
        "watch": "tsc -w -p .",
        "prepublishOnly": "npm run compile"
    },
    "devDependencies": {
        "typescript": "^5.6.3",
        "@types/vscode": "^1.90.0",
        "@types/node": "^22.7.4"
    },
    "dependencies": {
        "unified": "^11.0.5",
        "remark-parse": "^11.0.0",
        "remark-gfm": "^4.0.0",
        "remark-breaks": "^4.0.0",
        "remark-math": "6.0.0",
        "remark-rehype": "^11.1.1",
        "rehype-stringify": "^10.0.0",
        "rehype-slug": "^6.0.0",
        "rehype-highlight": "^7.0.2",
        "rehype-katex": "7.0.1",
        "katex": "0.16.22",
        "highlight.js": "^11.11.1"
    }
}